<div class="container py-4">
  <nav class="navbar navbar-expand-lg bg-white rounded shadow-sm mb-4">
    <div class="container-fluid">
      <div class="ms-auto">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/add">Add Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contacts">View Contacts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/account">Manage Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    <div class="card shadow-sm mb-4">
      <div class="card-body p-4">
        <h1 class="h4 card-title mb-0">Welcome, <%= user.name %></h1>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="h5 card-title mb-1">Dashboard Overview</h2>
        <p class="card-text text-muted">
          Below is your contact list. Use the options above to manage your
          account.
        </p>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-primary">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td>
                  <button class="btn btn-primary btn-sm">Edit</button>
                  <button class="btn btn-secondary btn-sm">Delete</button>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>
