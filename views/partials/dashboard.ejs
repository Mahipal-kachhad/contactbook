<div class="container py-4">
  <main>
    <div class="card shadow-sm mb-4">
      <div class="card-body p-4">
        <h1 class="h4 card-title mb-0">Welcome, <%= user.name %></h1>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="h5 card-title mb-1">Dashboard Overview</h2>
        <p class="card-text text-muted">
          Below is your contact list. Use the options above to manage your
          account.
        </p>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-primary">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% contacts.forEach(contact => { %> <% if (editingId ===
              contact.id) { %>
              <tr>
                <form action="/update/contact/<%= contact.id %>" method="POST">
                  <td>
                    <input
                      type="text"
                      name="name"
                      value="<%= contact.name %>"
                      class="form-control"
                      required
                    />
                  </td>
                  <td>
                    <input
                      type="email"
                      name="email"
                      value="<%= contact.email %>"
                      class="form-control"
                    />
                  </td>
                  <td>
                    <input
                      type="text"
                      name="phone"
                      value="<%= contact.phone %>"
                      class="form-control"
                      required
                    />
                  </td>
                  <td>
                    <button type="submit" class="btn btn-success btn-sm">
                      Save
                    </button>
                    <a href="/dashboard" class="btn btn-secondary btn-sm"
                      >Cancel</a
                    >
                  </td>
                </form>
              </tr>
              <% } else { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td>
                  <a
                    href="/delete/contact/<%= contact.id %>"
                    class="btn btn-danger btn-sm"
                    >Delete</a
                  >
                  <a
                    href="/dashboard?edit=<%= contact.id %>"
                    class="btn btn-primary btn-sm"
                    >Edit</a
                  >
                </td>
              </tr>
              <% } %> <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>
